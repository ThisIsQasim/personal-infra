{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/renovatebot/renovate",
        "ghcr.io/alexta69/metube"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "schedule": [
        "* 0-2 * * 0"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/homebridge/homebridge",
        "ghcr.io/alexta69/metube"
      ],
      "versioning": "loose"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "quay.io/minio/minio"
      ],
      "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+).*"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/servercontainers/samba"
      ],
      "versioning": "regex:^smbd-only-.*-s(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-r(?<revision>\\d+)?$"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/home/.+\\.yaml$/"
    ]
  }
}
